<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight=".5">
    <ImageView 
        android:id="@+id/big_tile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#000000"
        />
    <TextView
        android:id="@+id/big_tile_price"
        android:layout_alignRight="@+id/big_tile"
        android:layout_alignBottom="@+id/big_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="$100"
        />"
    
    
    </RelativeLayout>

    <LinearLayout 
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight=".5"
        android:orientation="horizontal">
        <RelativeLayout 
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight=".5">
            <ImageView 
        android:id="@+id/medium_left_tile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#ff0000"
        />
        <TextView
        android:id="@+id/medium_left_tile_price"
        android:layout_alignRight="@+id/medium_left_tile"
        android:layout_alignBottom="@+id/medium_left_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"        android:text="$100"
        />
        </RelativeLayout>
        
        <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight=".5"
        android:orientation="vertical">
            <RelativeLayout android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight=".5">
        <ImageView 
        android:id="@+id/small_top_tile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#00ff00"
        />
        <TextView
        android:id="@+id/small_top_tile_price"
        android:layout_alignRight="@+id/small_top_tile"
        android:layout_alignBottom="@+id/small_top_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"        android:text="$100"
        />  
        </RelativeLayout>
            
            
            
            <RelativeLayout android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight=".5">
                     <ImageView 
        android:id="@+id/small_bottom_tile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#0000ff"
        />
        <TextView
        android:id="@+id/small_bottom_tile_price"
        android:layout_alignRight="@+id/small_bottom_tile"
        android:layout_alignBottom="@+id/small_bottom_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
                android:text="$100"
        />     
                
            </RelativeLayout>
        </LinearLayout>
        
        
    </LinearLayout>
    

</LinearLayout>
