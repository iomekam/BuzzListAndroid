<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/item_info_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/generic_item" />

    <TextView
        android:id="@+id/item_info_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_info_image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:text="Item Price"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_info_price"
        android:layout_alignLeft="@+id/item_info_price"
        android:layout_marginBottom="19dp"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/item_info_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_info_price"
        android:layout_below="@+id/item_info_price"
        android:layout_marginTop="46dp"
        android:text="Item Description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/item_info_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_info_description_label"
        android:layout_alignRight="@+id/item_info_image"
        android:layout_below="@+id/item_info_description_label"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textMultiLine"
        
        android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
        android:text = "But why smiling man her imagine married. Chiefly can man her out believe manners cottage colonel unknown. Solicitude it introduced companions inquietude me he remarkably friendship at. My almost or horses period." >

        <requestFocus />
    </EditText>

</RelativeLayout>
