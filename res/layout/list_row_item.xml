<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    
    <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/image_ad"
        android:layout_width="100.0dip"
        android:layout_height="115.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/generic_item" />
    
	<TextView
	    android:id="@+id/dark_background"
	     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/image_ad"
	    android:layout_alignRight="@+id/image_ad"
	    android:layout_alignBottom="@+id/image_ad"
	    android:background="#80000000"/>
	
	<TextView
	    android:id="@+id/image_item_text"
	     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/image_ad"
	    android:layout_alignBottom="@+id/image_ad"
	    android:textColor="#ffffff"
	    android:paddingLeft="5dp"
	    android:textStyle="bold"
	    android:text = "$100"/>
	
	<TextView
	    android:id="@+id/image_date_text"
	     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/image_ad"
	    android:layout_below="@+id/image_ad"
	    android:textColor="#000000"
	    android:text = "Date"/>
</RelativeLayout>
    
    <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <RelativeLayout 
        android:id="@+id/list_row_content"
        android:layout_width="match_parent"
        android:layout_height="115.0dip">
        <TextView
        android:id="@+id/list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#E0AB0F"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_item_title"
        android:layout_below="@+id/list_item_title"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </RelativeLayout>

    <TextView 
        android:id="@+id/obo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/list_row_content"
        android:layout_alignRight="@+id/list_row_content"
        android:text="OBO"/>
</RelativeLayout>
</LinearLayout>

